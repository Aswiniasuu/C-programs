#include<stdio.h>
int main()
{
    int rows,i,s,j;
    printf("Enter the  number of rows: ");
    scanf("%d",&rows);
    for(i=1;i<=rows;i++)
    {
        for(s=0;s<rows-i;s++)
        {
            printf(" ");
        }
        for(j=0;j<(2*i-1);j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
